generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deck {
  id          String     @id @default(uuid())
  name        String
  description String?
  cards       DeckCard[]
}

model Card {
  id         String     @id
  arena_id   Int?       @unique
  name       String
  mana_cost  String?
  max_copies Int        @default(4)
  decks      DeckCard[]
}

model DeckCard {
  deck_id String
  card_id String
  selected_copies Int @default(1)

  deck Deck @relation(fields: [deck_id], references: [id], onDelete: Cascade)
  card Card @relation(fields: [card_id], references: [id], onDelete: Cascade)

  @@id([deck_id, card_id])
  @@index([card_id])
  @@index([deck_id])
}
